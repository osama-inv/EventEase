@model EventEase.Models.Event

<div class="container">
    <div class="form-container">
        <h2 class="text-center">Create Event</h2>
        <form action="/Home/AddEvent" method="post">
            <div class="form-group">
                <label asp-for="EventName" class="control-label"></label>
                <input asp-for="EventName" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="EventData" class="control-label"></label>
                <input asp-for="EventData" class="form-control" type="datetime-local" />
            </div>
            <button type="submit" class="btn btn-primary btn-block">Submit</button>
        </form>
    </div>
</div>

